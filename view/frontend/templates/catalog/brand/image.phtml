    $_helper    = $this->helper(O2TI\ShopByBrand\Helper\Output::class);
    $_brand  = $block->getCurrentBrand();
    $_imgHtml   = '';
    if ($_imgUrl = $_brand->getImage()) {
        $_imgHtml = '<div class="brand-image"><img src="'
            . $_helper->getImageUrl($block->escapeUrl($_imgUrl))
            . '" alt="'
            . $block->escapeHtmlAttr($_brand->getTitle())
            . '" title="'
            . $block->escapeHtmlAttr($_brand->getTitle())
            . '" class="image" /></div>';
        $_imgHtml = $_helper->brandAttribute($_brand, $_imgHtml, 'image');
        /* @noEscape */ echo $_imgHtml;
    }
?>
